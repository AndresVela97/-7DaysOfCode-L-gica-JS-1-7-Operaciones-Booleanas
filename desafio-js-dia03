		 }else{
		 alert("Eleccion incorrecta");
		 }
        
    }else if (eleccion2 == 2){
	
		const eleccion3 = prompt("Escribe 1 para Seguir especializandose en Vue o escribe 2 para desarrollarse como FullStack");
	
	 if (eleccion3 == 1){
