const eleccion1 = prompt("A que Area quieres seguir : Selecciona 1 para Front-End o selecciona 2 para Back-end ");

if( eleccion1 == 1){
   const eleccion2 = prompt("Escribe 1 para React o escribe 2 para Vue"); 

    if (eleccion2 == 1){
		const eleccion3 = prompt("Escribe 1 para Seguir especializandose en React o escribe 2 para desarrollarse como FullStack");
	
	 if (eleccion3 == 1){
			alert("Genial React es un lenguaje muy Interesante");
		 }else if (eleccio3 == 2){
